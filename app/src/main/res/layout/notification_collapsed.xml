<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_shamsi_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="چهارشنبه ۵ شهریور ۱۴۰۴" />

    <!-- قمری | میلادی در یک خط -->
    <TextView
        android:id="@+id/tv_other_dates_collapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:textAlignment="center"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:textDirection="anyRtl"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="13sp"
        android:autoSizeStepGranularity="1sp"
        android:text="۴ ربیع‌الاول ۱۴۴۷ | ۲۷ اوت ۲۰۲۵" />

    <!-- وقت بعدی در خط بعد -->
    <TextView
        android:id="@+id/tv_next_prayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="#0D47A1"
        android:textAlignment="center"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="وقت بعدی: طلوع بامداد ۰۳:۴۷" />

</LinearLayout>