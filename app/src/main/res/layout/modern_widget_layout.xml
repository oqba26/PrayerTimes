<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_background_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:background="@drawable/widget_background_light">

    <!-- ساعت: TextView + ImageView (bitmap) -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_widget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="۰۰:۰۰"
            android:textSize="22sp"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_widget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <!-- خط جداکننده -->
    <TextView
        android:id="@+id/separator1_small"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginVertical="6dp"/>

    <!-- تاریخ شمسی -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_widget_date_shamsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سه‌شنبه ۳ شهریور ۱۴۰۴"
            android:textColor="#2E7D32"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_widget_shamsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <!-- تاریخ قمری/میلادی -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/tv_widget_date_hijri_gregorian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="۱۴۴۷ / ۰۲ / ۲۹ | ۲۰۲۵ / ۰۸ / ۲۵"
            android:textColor="#424242"
            android:textSize="12sp"/>
        <ImageView
            android:id="@+id/iv_widget_hg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <!-- خط جداکننده -->
    <TextView
        android:id="@+id/separator2_small"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginVertical="6dp"/>

    <!-- نماز بعدی -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_widget_next_prayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ظهر - ۱۲:۳۰"
            android:textColor="#2E7D32"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_widget_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </FrameLayout>
</LinearLayout>