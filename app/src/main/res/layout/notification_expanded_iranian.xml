<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_expanded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_next_day_exp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:src="@drawable/ic_chevron_left_24"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_shamsi_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/iraniansans"
                android:text="چهارشنبه ۵ شهریور ۱۴۰۴" />

            <TextView
                android:id="@+id/tv_other_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/iraniansans"
                android:text="۴ ربیع‌الاول ۱۴۴۷ | ۲۷ اوت ۲۰۲۵" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_prev_day_exp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:src="@drawable/ic_chevron_right_24"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_prayer_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textDirection="anyRtl"
        android:includeFontPadding="false"
        android:lineSpacingExtra="2dp"
        android:fontFamily="@font/iraniansans"
        android:text="..." />
</LinearLayout>