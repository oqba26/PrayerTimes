<?xml version="1.0" encoding="utf-8"?>
<!-- Added ID to root layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expanded_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- عنوان‌ها -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_shamsi_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_other_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp" />

        <ImageView
            android:id="@+id/iv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp" />
    </LinearLayout>

    <!-- اوقات نماز (fallback) -->
    <TextView
        android:id="@+id/tv_prayer_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textDirection="anyRtl"
        android:includeFontPadding="false"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="12dp"
        android:text="..." />

    <!-- اوقات نماز (Bitmap) -->
    <ImageView
        android:id="@+id/iv_prayer_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginBottom="12dp" />

    <!-- ردیف دکمه‌ها: چپ=روز بعد | وسط=امروز | راست=روز قبل -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layoutDirection="ltr">

        <!-- چپ: روز بعد -->
        <ImageView
            android:id="@+id/iv_next_day_exp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:contentDescription="روز بعد" />

        <!-- وسط: امروز (فضا همیشه محفوظ می‌ماند) -->
        <ImageView
            android:id="@+id/btn_today"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:contentDescription="بازگشت به امروز" />

        <!-- راست: روز قبل -->
        <ImageView
            android:id="@+id/iv_prev_day_exp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:contentDescription="روز قبل" />
    </LinearLayout>

</LinearLayout>