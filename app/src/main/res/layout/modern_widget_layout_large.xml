<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_background_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layoutDirection="rtl"
    android:gravity="center"
    android:background="@drawable/widget_background_light">

    <!-- ساعت -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="۰۰:۰۰"
            android:textSize="26sp"
            android:textColor="#0D47A1"
            android:textStyle="bold"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <TextView
        android:id="@+id/separator1_large"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginVertical="8dp"/>

    <!-- تاریخ‌ها -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_persian_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سه‌شنبه ۳ شهریور ۱۴۰۴"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iv_persian_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <TextView
            android:id="@+id/tv_hg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="۱۴۴۷ / ۰۲ / ۲۹ | ۲۰۲۵ / ۰۸ / ۲۵"
            android:textColor="#424242"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_hg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <TextView
        android:id="@+id/separator2_large"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginVertical="12dp"/>

    <!-- اوقات ۶ گانه -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_prayers_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#0D47A1"
            android:singleLine="false" />
        <ImageView
            android:id="@+id/iv_prayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <TextView
        android:id="@+id/separator3_large"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- اوقات ۵ گانه -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_prayer_times_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <!-- دکمه‌ها -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layoutDirection="ltr">

        <ImageView
            android:id="@+id/iv_next_day"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:contentDescription="روز بعد"/>

        <ImageView
            android:id="@+id/btn_today"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:contentDescription="بازگشت به امروز"/>

        <ImageView
            android:id="@+id/iv_prev_day"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:contentDescription="روز قبل"/>
    </LinearLayout>
</LinearLayout>