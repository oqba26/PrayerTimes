<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true" >
		<shape android:shape="rectangle"  >
			<corners android:radius="10dip" />
			<stroke android:width="0dip" android:color="#8e2d3b" />
			<gradient android:angle="-90" android:startColor="#8e2d3b" android:endColor="#b2394a"  />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape android:shape="rectangle"  >
			<corners android:radius="10dip" />
			<stroke android:width="0dip" android:color="#8e2d3b" />
			<solid android:color="#b2394a"/>
		</shape>
	</item>
	<item >
		<shape android:shape="rectangle"  >
			<corners android:radius="10dip" />
			<stroke android:width="0dip" android:color="#8e2d3b" />
			<gradient android:angle="-90" android:startColor="#b2394a" android:endColor="#8e2d3b" />
		</shape>
	</item>
</selector>